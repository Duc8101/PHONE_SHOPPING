<section class="products section bg-gray" style="height: 100vh">
    <div class="container-fluid">
        <div class="row">
            <p style="color:red;margin-left: 4%" id="error">@ViewData["error"]</p>
            <p style="color:green;margin-left: 4%" id="success">@ViewData["success"]</p>
            <div class="col-lg-12 title" style="margin-left: 4%">
                <form method="post" class="text-left clearfix" action="/ManagerCategory/Create">
                    <div class="form-group">
                        <label for="Name">Category Name</label><br />
                        <input type="text" class="form-control" name="CategoryName" id="Name" style="width: 300px" placeholder="Category Name" required>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-main text-center" onclick="return confirm('Do you sure you want to save your change?'),myFunction()">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function myFunction() {
        var name = document.getElementById("Name");
        if (name.value.toString().trim().length === 0) {
            document.getElementById("error").innerHTML = "You have to input category name";
            document.getElementById("success").innerHTML = "";
            handleSubmit(event);
        }
    }

    function handleSubmit(event) {
        event.preventDefault();
    }
</script>