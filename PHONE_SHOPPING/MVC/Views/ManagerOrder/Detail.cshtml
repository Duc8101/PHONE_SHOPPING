@using Common.DTO.OrderDetailDTO;
@model OrderDetailDTO
@{
    decimal sum = 0;
}
<section class="user-dashboard page-wrapper" style="height: 100vh">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="dashboard-wrapper user-dashboard">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Image</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DetailDTO item in Model.DetailDTOs)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>
                                            <img src="@item.Image" alt="" width="50" height="50">
                                        </td>
                                        <td>@item.Price</td>
                                        <td>@item.Quantity</td>
                                        <td>@(item.Price * item.Quantity)</td>
                                    </tr>
                                    sum = sum + item.Price * item.Quantity;
                                }
                            </tbody>
                        </table>
                        <div style="color: orange; font-size: 20px">Grand Total = $@sum</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
