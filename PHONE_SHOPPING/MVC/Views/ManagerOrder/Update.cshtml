@using DataAccess.Const;
@using DataAccess.DTO.OrderDetailDTO;
@model OrderDetailDTO
<section class="products section bg-gray" style="height: 100vh">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 title" style="margin-left: 4%">
                <p style="color:red">@ViewData["error"]</p>
                <p style="color:green">@ViewData["success"]</p>
                <form action="/ManagerOrder/Update/@Model.OrderId" method="post" class="text-left clearfix">
                    <select name="Status" @(ViewData["success"] == null || Model.Status == OrderConst.STATUS_PENDING ? "" : "disabled")>
                        <option value="@OrderConst.STATUS_PENDING" selected="@(Model.Status == OrderConst.STATUS_PENDING)">@OrderConst.STATUS_PENDING</option>
                        <option value="@OrderConst.STATUS_APPROVED" selected="@(Model.Status == OrderConst.STATUS_APPROVED)">@OrderConst.STATUS_APPROVED</option>
                        <option value="@OrderConst.STATUS_REJECTED" selected="@(Model.Status == OrderConst.STATUS_REJECTED)">@OrderConst.STATUS_REJECTED</option>
                    </select>
                    <br />
                    <div>
                        Note :
                        <textarea name="Note" style="width: 300px" class="form-control" @(ViewData["success"] == null || Model.Status == OrderConst.STATUS_PENDING ? "" : "disabled")>
                            @Model.Note
                        </textarea>
                    </div>
                    <br />
                    <button type="submit" onclick="return confirm('Are you sure you want to save your change?')"
                    @(ViewData["success"] == null || Model.Status == OrderConst.STATUS_PENDING ? "" : "disabled")>Update</button>
                </form>
            </div>
        </div>
    </div>
</section>