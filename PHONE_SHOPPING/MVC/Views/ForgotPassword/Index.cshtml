<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Forgot Password</h2>
                    <form class="text-left clearfix" action="/ForgotPassword" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Email" name="Email" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center" onclick="myFunction()">Submit</button>
                        </div>
                    </form>
                    <p style="color: red">@ViewData["error"]</p>
                    <p style="color: green">@ViewData["success"]</p>
                </div>
            </div>
        </div>
    </div>
</section>